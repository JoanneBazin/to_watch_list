generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WatchList {
  id             String           @id @default(cuid())
  title          String
  type           MediaType
  synopsis       String?
  year           Int?
  real           String?
  platform       String?
  categories     String[]
  originalTitle  String?
  tmdbId         Int?
  lastTmdbUpdate DateTime?
  suggestions    Suggestion[]
  users          UsersWatchList[]
}

model Category {
  id   String @id @default(cuid())
  name String @unique
}

model User {
  id                    String           @id @default(cuid())
  email                 String           @unique
  name                  String           @unique
  createdAt             DateTime         @default(now())
  admin                 Boolean          @default(false)
  emailVerified         Boolean          @default(false)
  image                 String?
  updatedAt             DateTime         @default(now()) @updatedAt
  friendRequestReceived FriendRequest[]  @relation("Receiver")
  friendRequestSent     FriendRequest[]  @relation("Sender")
  suggestionsReceived   Suggestion[]     @relation("Receiver")
  suggestionsSent       Suggestion[]     @relation("Sender")
  watchList             UsersWatchList[]
  accounts              Account[]
  sessions              Session[]

  @@map("user")
}

model FriendRequest {
  id         String        @id @default(cuid())
  senderId   String
  receiverId String
  status     RequestStatus @default(PENDING)
  receiver   User          @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  sender     User          @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
}

model Suggestion {
  id              String         @id @default(cuid())
  senderId        String
  receiverId      String
  mediaId         String
  senderComment   String?
  receiverComment String?
  status          RequestStatus  @default(PENDING)
  media           WatchList      @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  receiver        User           @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  userMedia       UsersWatchList @relation(fields: [receiverId, mediaId], references: [userId, mediaId], onDelete: Cascade)
  sender          User           @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
}

model UsersWatchList {
  userId      String
  mediaId     String
  addedAt     DateTime     @default(now()) @db.Date
  watched     Boolean      @default(false)
  suggestions Suggestion[]
  media       WatchList    @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, mediaId])
  @@unique([userId, mediaId])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

enum MediaType {
  FILM
  SERIE
}

enum RequestStatus {
  PENDING
  ACCEPTED
  REFUSED
}
