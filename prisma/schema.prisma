generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Films {
  id           Int      @id @default(autoincrement())
  title        String
  synopsis     String?
  year         Int?
  real         String?
  platform     String?
  categoryName String
  category     Category @relation(fields: [categoryName], references: [name])
  addedAt     DateTime  @default(now()) @db.Date
  watched     Boolean   @default(false) 
}

model Series {
  id           Int      @id @default(autoincrement())
  title        String
  synopsis     String?
  year         Int?
  real         String?
  platform     String?
  categoryName String
  category     Category @relation(fields: [categoryName], references: [name])
  addedAt     DateTime  @default(now()) @db.Date
  watched     Boolean   @default(false)
}

model Category {
  id     Int      @id @default(autoincrement())
  name   String   @unique
  Films  Films[]
  Series Series[]
}
